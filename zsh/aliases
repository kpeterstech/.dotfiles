# to bypass an aliased command pre-pend it with "\"
# Ex: \df

# convenience aliases for editing configs
alias ev='vim ~/.vimrc'
alias et='vim ~/.tmux.conf'
alias ez='vim ~/.zshrc'
alias ea='vim ~/.dotfiles/zsh/aliases'
alias sz='source ~/.zshrc'

# let there be color
alias ll='ls -lhv --color=tty'
alias ls='ls -v --color=tty'
alias lla='la -lah --color=auto'
alias ld='ls -ld */ --color=auto'
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'

# sort files by size with larges on the bottom in human readable format
alias largos='ls -largoSh'

# list files with newest files on bottom
alias lltr='ll -tr'

# commands for python
alias python=python3.6
alias python3=python3.5
alias pip=pip3

# more information, the better. (-v = verbose)
alias mv="mv -v"
alias cp="cp -v"
alias rm="rm -v"

# "rm -rf" is too long to type
alias rr="rm -rf"
alias surr="sudo rm -rf"

# create dir with necessary paths
alias mkdir="mkdir -p"

# display sizes in human format
alias df="df -h"
alias du='du -sh'

# quickly move to .dotfiles directory
alias dot='cd ~/.dotfiles'

# git shortcuts
alias ga="git add"
alias gaa="git add -A"
alias gb="git branch"
alias gbd="git branch --delete"
alias gc="git commit"
alias gco="git checkout"
alias gp="git push"
alias gpom="git push origin master"
alias gs="git status"

# quickly attach to session with tmux
alias tmuxa='tmux attach -t '

# quickly play media
alias flac='vlc *.flac'
alias mp3='vlc *.mp3'
alias mp4='vlc *.mp4'
alias mkv='vlc *.mkv'
alias webm='vlc *.webm'
alias mov='vlc *.mov'
alias vvlc='vlc *'
alias eogg='eog *'
alias png='eog *.png'
alias jpeg='eog *.jpeg'
alias jpg='eog *.jpg'
alias gif='eog *.gif'

# resume wget by default
alias wget='wget -c'

# opens vim in with sudo
alias suvim='sudo vim'

# shows how many files are in the current directory
alias num='ls -1 | wc -l'
